{
  "parserOptions": {
    "ecmaVersion": 9,
    "sourceType": "module"
  },
  "ecmaFeatures": {
    "modules": true,
    "spread": true,
    "restParams": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:security/recommended",
    "plugin:promise/recommended"
  ],
  "env": {
    "es6": true,
    "node": true,
    "browser": false
  },
  "rules": {
    "linebreak-style": [
      "error",
      "unix"
    ],
    "no-unused-vars": "error",
    "no-undef": "error",
    "block-scoped-var": "error",
    "require-jsdoc": "off",
    "semi": [
      "error",
      "always"
    ],
    "quotes": [
      "error",
      "single"
    ]
  }
}
